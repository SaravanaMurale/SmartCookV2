<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DummyActivity">

    <Button
        android:id="@+id/moveToFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move To Fragment" />

    <Button
        android:id="@+id/saveInSqlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moveToFragment"
        android:text="SaveInDB"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/searchByBurner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveInSqlite"
        android:text="Search By Burner"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/searchByDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchByBurner"
        android:text="Search By Date"
        android:visibility="invisible"
        />


    <FrameLayout
        android:id="@+id/fragmentContainer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>


